{{page-title "Index"}}

<div class="ui grid centered" style="margin: 5px;">

  <div class="three wide column" {{action "openSection"}}>
    <div class="ui card">
      <img src="https://www.lavantgardiste.com/25076-thickbox_default/petit-pot-a-fleur-en-terre-cuite.jpg"
           style="width: auto; height: auto; max-height: 300px;" />
      <h4>Sections</h4>
      <p>Pour g√©rer vos sections</p>
    </div>
  </div>

  <div class="three wide column" {{action "openProduits"}}>
    <div class="ui card">
      <img
        src="data:image/png;base64,"
        style="width: auto; height: auto; max-height: 300px" />
      <h4>Produits</h4>
      <p>Ajouter, modifier ou supprimer des produits</p>
    </div>
  </div>

  <div class="three wide column" {{action "open"}}>
    <div class="ui card">
      <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Carizzo_plain_spring_flowers_in_bloom_6.jpg"
           style="max-height: 280px; max-width: 290px; min-height: 280px;" />
      <h4>Autre</h4>
      <p>Le reste</p>
    </div>
  </div>

</div>

<div style="width: max-content; margin: auto; display: block; opacity: 75%;" class="ui menu">
  <h2>Mes commandes</h2>

  {{#each @model.orders as |com|}}
      <LinkTo @route="orders.id" @model={{com.id}} style="margin: 1%;">
    <div class="ui relaxed divided list segment inverted green">
        <div class="item">
          <i class="large shopping cart icon black"></i>
          <div class="content">
            <a class="header">Commande du {{moment-format com.dateCreation 'DD-MM-YYYY'}}</a>
            <a class="header">Reste {{com.count}} produit(s)</a>
          </div>
        </div>
    </div>
      </LinkTo>
  {{/each}}
</div>
{{outlet}}
