<div class="ui card" style="margin: 5%; height: min-content">
  <div class="image" style="height: 220px; position: static">
    {{#if @image}}
      <img class="" height="220px" src={{@image}}>
    {{else}}
      <img class=""
           src="https://www.publicdomainpictures.net/pictures/280000/velka/not-found-image-15383864787lu.jpg" height="220px">
    {{/if}}
  </div>

  <div class="content" style="background-color: white">
    <a class="header">{{@name}}</a>
    <div class="description">{{@comment}}</div>
  </div>
</div>
