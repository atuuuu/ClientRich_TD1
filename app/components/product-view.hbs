<div class="item">
  {{#if @image}}
    <img class="ui avatar image" src={{@image}}>
  {{else}}
    <img class="ui avatar image" src="https://user-images.githubusercontent.com/24848110/33519396-7e56363c-d79d-11e7-969b-09782f5ccbab.png">
